<!-- res/drawable/lavender_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <gradient
                android:startColor="#8692f7"
            android:endColor="#b4a7d6"
            android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#6c71c4" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
